# SPOE configuration for authentication
# Generated by HAProxy charm

[haproxy-spoe-auth]
spoe-agent haproxy-spoe-auth-agent
    messages check-request
    option var-prefix haproxy_spoe_auth
    timeout hello      10s
    timeout idle       2m
    timeout processing 10s
    use-backend spoe-auth-backend
    log global

spoe-message check-request
    args frontend=var(txn.backend_prefix)
    event on-frontend-http-request

