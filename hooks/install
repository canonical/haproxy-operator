#!/bin/sh

set -eu

apt_get_install() {
    DEBIAN_FRONTEND=noninteractive apt-get -y -qq -o Dpkg::Options::="--force-confdef" -o Dpkg::Options::="--force-confold" install $1
}

juju-log 'Invoking charm-pre-install hooks'
[ -d exec.d ] && ( for f in exec.d/*/charm-pre-install; do [ -x $f ] && /bin/sh -c "$f"; done )

juju-log 'Install dependencies'
apt_get_install python-software-properties

juju-log 'Add charm tools ppa'
apt-add-repository -y ppa:ubuntuone/charm-tools
apt-get -qq update

juju-log 'Install charmsupport and dependencies'
apt_get_install charm-tools python-charmsupport python-shelltoolbox

juju-log 'Invoking python-based install hook'
python ./hooks.py install
